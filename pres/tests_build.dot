digraph tests_build {
    rankdir=LR;
    node [shape=box, style=filled, color=lightblue];

    // Input test definitions
    test_h [label="tests/test_solutions.h", shape=ellipse, color=lightgreen];
    t_cpp [label="tests/t.cpp (generated by cxxtestgen)", shape=box, color=lightyellow];
    t_o [label="tests/t.o"];
    sol_cpp [label="../src/solutions.cpp"];
    sol_o [label="tests/solutions.o"];
    test_exe [label="tests/test", shape=diamond, color=orange];

    // Flow
    test_h -> t_cpp [label="cxxtestgen"];
    t_cpp -> t_o [label="compile"];
    sol_cpp -> sol_o [label="compile"];
    t_o -> test_exe [label="link"];
    sol_o -> test_exe [label="link"];
}
